{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs" ,
    "lib": [
      "es6"
    ],
    "typeRoots": ["@types", "./node_modules/@types"],
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.js"
  ]
}
